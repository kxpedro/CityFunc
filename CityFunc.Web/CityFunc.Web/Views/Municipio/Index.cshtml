<div class="modal fade" id="modalMunicipio" tabindex="-1" role="dialog" aria-labelledby="modalMunicipio" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalMunicipio">Municipios</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">                    
                    <div class="col-md-6">
                        <h4>Cadastro de Municipios</h4>
                        @{Html.RenderAction("_partialCreate", "Municipio");}
                    </div>
                    <div class="col-md-6">
                        <h4>Busca por Municipios</h4>
                        <hr />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>