@model CityFunc.Web.Models.Funcionario

    @using (Html.BeginForm("Create", "Funcionarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Funcionário</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">  
                <div class="row">
                    <div class="col-md-8">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control col", @placeholder = "Ex: Pedro" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control col", @placeholder = "Ex: 526.751.520-00" } })
                        @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
    
    
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.CEP, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.CEP, new { htmlAttributes = new { @class = "form-control col", @placeholder = "Ex: 99950-520" } })
                        @Html.ValidationMessageFor(model => model.CEP, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-5">
                        @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control col", @placeholder = "Ex: Rua Joana" } })
                        @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1">
                        @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control col", @placeholder = "Ex: 110" } })
                        @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1">
                        @Html.LabelFor(model => model.UF, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.UF, new SelectList(ViewBag.ListaDeUF), new { @class = "form-control col" } )
                        @Html.ValidationMessageFor(model => model.UF, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">                        
                        @Html.LabelFor(model => model.Municipio, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Municipio, new SelectList(ViewBag.ListaDeCidade), new { @class = "form-control col" })
                        @Html.ValidationMessageFor(model => model.Municipio, "", new { @class = "text-danger" })
                    </div>                    
                </div>                               
            </div>
    
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control col" } })
                        @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Complemento, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control col" } })
                        @Html.ValidationMessageFor(model => model.Complemento, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>  
            
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">                        
                        <label for="file">Foto</label>
                        <input type="file" name="file" id="file" class="form-control-file" />
                    </div>
                </div>
            </div>
   
            <div class="form-group">
                <div class="row">
                    <div class="col-md-10">
                        <br />
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }

